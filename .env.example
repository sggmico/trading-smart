# Binance API Configuration
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here
BINANCE_TESTNET=true

# Trading Configuration
TRADING_MODE=simulation  # simulation, paper, live
TRADING_SYMBOLS=BTCUSDT,ETHUSDT
DEFAULT_LEVERAGE=1
MAX_POSITION_SIZE=0.3  # 30% of total capital

# Risk Management
MAX_DRAWDOWN=0.2  # 20%
STOP_LOSS_PERCENTAGE=0.02  # 2%
TAKE_PROFIT_PERCENTAGE=0.05  # 5%
MAX_DAILY_LOSS=0.1  # 10%

# Database Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=your_token_here
INFLUXDB_ORG=smart_trading
INFLUXDB_BUCKET=market_data

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=trading_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_TO_FILE=true

# AI/ML Configuration
MODEL_UPDATE_INTERVAL=86400  # seconds (24 hours)
RETRAIN_ON_STARTUP=false
